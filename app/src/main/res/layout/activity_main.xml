<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/help">

    <Button
        android:id="@+id/getInfo"
        android:layout_width="349dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="btnClicked"
        android:text="Get information about the families in need in your area"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/giveInfo"
        android:layout_width="324dp"
        android:layout_height="87dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="btnClicked"
        android:text="Give us location of the people in need of relief funds"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="415dp"
        android:layout_height="4dp"
        android:layout_marginTop="50dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getInfo" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="330dp"
        android:layout_height="59dp"
        android:layout_marginTop="50dp"
        android:background="#00FFFFFF"
        android:paddingLeft="10sp"
        android:text="Help us help them! "
        android:textColor="@android:color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="312dp"
        android:layout_height="91dp"
        android:layout_marginTop="50dp"
        android:background="#68FFFFFF"
        android:paddingLeft="5dp"
        android:text="Extending a hand to help someone has more value than joining two for prayer."
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="402dp"
        android:layout_height="4dp"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giveInfo" />

    <Button
        android:id="@+id/button3"
        android:layout_width="290dp"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Our Helpers, Our Heros"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

</androidx.constraintlayout.widget.ConstraintLayout>